@model IEnumerable<AuditLog>

@{
    ViewData["Title"] = "Logs";
}

<h2>Logs</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>#</th>
        <th>User</th>
        <th>Action</th>
        <th>Timestamp</th>
    </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var log in Model)
        {
            <tr>
                <td>@log.Id</td>
                <td>@log.User.MetadataModel.FirstName : @log.User.Email</td>
                <td>@log.Action.Name : @log.Action.Description</td>
                <td>@log.ExecutedAt</td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5" class="text-center">No logs available.</td>
        </tr>
    }
    </tbody>
</table>